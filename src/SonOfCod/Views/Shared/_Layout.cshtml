<!DOCTYPE html>
@using System.Security.Claims

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Content/css/StyleSheet.css">
    
</head>
<body>
        <div class="heading-logo pull-left">
        </div>     
        <nav class="navbar">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="~/">
                        <img src="~/Content/Images/Logo.jpg" alt="Son of Cod Logo" class="placeholder" />
                    </a>                    
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Products", "Index", "Home")</li>
                    <li>@Html.ActionLink("Our History", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us", "Index", "Home")</li>
                </ul>
            </div>
        </nav>
    <div class="container">
        @RenderBody()
    </div>
    <nav class="navbar navbar-fixed-bottom">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <p class="navbar-text">Hello, @User.Identity.Name!</p>
                    <li><a asp-controller="Account" asp-action="Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                }
                <li >@Html.ActionLink("Admin Portal", "Index", "Account")</li>
            </ul>
        </div>
    </nav>
</body>
</html>
